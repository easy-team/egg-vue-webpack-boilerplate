{
  "name": "egg-vue-webpack-html-boilerplate",
  "version": "5.0.0",
  "description": "基于 easywebpack-vue 和 egg-view-vue-ssr 插件的 Egg + Vue SSR 服务端渲染同构工程骨架项目",
  "scripts": {
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "egg-bin test",
    "clean": "easy clean all",
    "build": "easy build prod",
    "start": "egg-scripts start --port 7001 --workers 4",
    "backend": "nohup egg-scripts start --port 7001 --workers 4 &",
    "stop": "egg-scripts stop",
    "lint": "eslint . --ext .js",
    "fix": "eslint --fix . --ext .js",
    "ii": "yarn --registry https://registry.npm.taobao.org",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.1",
    "cross-env": "^5.0.0",
    "egg": "^2.1.0",
    "egg-bin": "^4.3.7",
    "egg-cors": "^2.0.0",
    "egg-logger": "^1.5.0",
    "egg-scripts": "^2.5.1",
    "egg-validate": "^1.0.0",
    "egg-view-nunjucks": "^2.2.0",
    "egg-view-vue-ssr": "^3.2.0",
    "element-ui": "^2.0.8",
    "extend": "~3.0.0",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.4",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "mockjs": "^1.0.1-beta3",
    "moment": "^2.29.2",
    "shortid": "^2.2.8",
    "showdown": "^1.8.6",
    "simplemde": "^1.11.2",
    "vue": "^2.5.0",
    "vue-hot-reload-api": "^2.1.0",
    "vue-i18n": "^8.1.0",
    "vue-material-input": "^1.2.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "easywebpack-cli": "^5.0.0",
    "easywebpack-vue": "^5.0.0",
    "egg-logview": "^1.0.0",
    "egg-mock": "^4.0.1",
    "egg-webpack": "^5.0.0",
    "egg-webpack-vue": "^2.0.0",
    "eslint": "^4.19.1",
    "eslint-config-egg": "^5.0.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-vue": "^4.7.1",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "husky": "^4.2.5",
    "ip": "^1.1.5",
    "lint-staged": "^10.2.2",
    "raw-loader": "^3.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "ci": {
    "version": "12, 14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/easy-team/egg-vue-webpack-boilerplate.git"
  },
  "author": "hubcarl@126.com",
  "license": "MIT",
  "homepage": "https://github.com/easy-team/egg-vue-webpack-boilerplate"
}